{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "rootDir": "src", // gdzie trzymasz kod TS
    "outDir": "dist", // gdzie trafi skompilowany JS
    "strict": true, // wymusza dobre praktyki typowania
    "esModuleInterop": true, // pozwala używać import/export z npm
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
